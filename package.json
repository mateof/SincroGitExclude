{
  "name": "sincrogitexclude",
  "version": "1.2.0",
  "description": "Manage git-excluded files with version control",
  "main": "./out/main/index.js",
  "author": {
    "name": "mateof",
    "email": "mateof@users.noreply.github.com"
  },
  "license": "MIT",
  "scripts": {
    "dev": "electron-vite dev",
    "build": "electron-vite build",
    "start": "electron-vite preview",
    "postinstall": "electron-rebuild -f -w better-sqlite3",
    "rebuild": "electron-rebuild -f -w better-sqlite3",
    "build:win": "npm run build && electron-builder --win && npm run rebuild",
    "build:mac": "npm run build && electron-builder --mac && npm run rebuild",
    "build:mac-x64": "npm run build && electron-builder --mac --x64 && npm run rebuild",
    "build:mac-arm64": "npm run build && electron-builder --mac --arm64 && npm run rebuild",
    "build:linux": "npm run build && electron-builder --linux && npm run rebuild",
    "build:all": "npm run build && electron-builder --mac --linux --win && npm run rebuild",
    "build:unpack": "npm run build && electron-builder --win --dir && npm run rebuild"
  },
  "dependencies": {
    "@electron-toolkit/preload": "^3.0.1",
    "@electron-toolkit/utils": "^3.0.0",
    "archiver": "^7.0.1",
    "better-sqlite3": "^11.7.0",
    "chokidar": "^4.0.3",
    "class-variance-authority": "^0.7.1",
    "clsx": "^2.1.1",
    "diff2html": "^3.4.48",
    "electron-log": "^5.3.0",
    "extract-zip": "^2.0.1",
    "i18next": "^24.2.2",
    "lucide-react": "^0.469.0",
    "marked": "^17.0.3",
    "react": "^18.3.1",
    "react-dom": "^18.3.1",
    "react-i18next": "^15.4.1",
    "simple-git": "^3.27.0",
    "tailwind-merge": "^2.6.0",
    "uuid": "^11.1.0",
    "zustand": "^5.0.3"
  },
  "devDependencies": {
    "@electron-toolkit/tsconfig": "^1.0.1",
    "@electron/rebuild": "^3.7.1",
    "@tailwindcss/vite": "^4.0.0",
    "@types/archiver": "^6.0.3",
    "@types/better-sqlite3": "^7.6.12",
    "@types/react": "^18.3.18",
    "@types/react-dom": "^18.3.5",
    "@types/uuid": "^10.0.0",
    "@vitejs/plugin-react": "^4.3.4",
    "autoprefixer": "^10.4.20",
    "electron": "^33.3.1",
    "electron-builder": "^25.1.8",
    "electron-vite": "^2.3.0",
    "postcss": "^8.5.1",
    "tailwindcss": "^4.0.0",
    "typescript": "^5.7.3"
  }
}
